<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/cgreen"
    android:gravity="center"
    tools:context=".tensor_flow">

<!--    <com.airbnb.lottie.LottieAnimationView-->
<!--        android:id="@+id/animation_view"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="150dp"-->
<!--        app:lottie_autoPlay="true"-->
<!--        android:gravity="center"-->
<!--        app:lottie_loop="true"-->
<!--        app:lottie_rawRes="@raw/foots" />-->

    <ImageView
        android:layout_width="353dp"
        android:layout_height="230dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:src="@drawable/dogs">

    </ImageView>

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:foregroundGravity="center"
        android:backgroundTint="@color/white"
        android:layout_marginTop="0dp"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp"
        android:layout_marginBottom="150dp"
        app:cardElevation="4dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/linearlayoutButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <Button
                android:id="@+id/tensorflow_lite"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/cgreen"
                android:text="TensorFlow Lite"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/gemini_vision"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/cgreen"
                android:text="Gemini Vision"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/border"
                android:scaleType="centerCrop"
                app:riv_corner_radius="300dp" />

            <Button
                android:id="@+id/custom_model"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/cgreen"
                android:text="Custom Model"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
